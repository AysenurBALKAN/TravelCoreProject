@using TEntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.GuideId</td>
    <td><img src="@item.image" class="rounded-circle" height="50"width="50" /></td>
    <td>@item.GuideName</td>
    <td>@item.Description</td>
    
        @{       if (item.Status == true)
            {
                <td><a href="#" class="btn btn-outline-danger">Pasif Yap</a></td>
            }
                else
                {
                    <td><a href="#" class="btn btn-outline-success">Aktif Yap</a></td>
                }
        }
    
    <td><a href="#" class="btn btn-outline-primary">Düzenle</a></td>
</tr>
    }
</table>
<a href="/Admin/Guides/AddGuide/" class=" btn btn-outline-success">Yeni Rehber Giriş</a>
