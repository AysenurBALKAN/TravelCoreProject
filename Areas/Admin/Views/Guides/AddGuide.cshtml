@model TEntityLayer.Concrete.Guide
@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Rehber Ekleme Sayfası</h1>
<form method="post">
    <div class="form-group">
        @Html.Label("Adı- Soyadı")
        <input type="text" asp-for="GuideName" class="form-control" />
        <span asp-validation-for="GuideName" class="text-danger"></span>
    </div>
  
    <br />
    <div class="form-group">
        @Html.Label("Görsel")
        <input type="text" asp-for="image" class="form-control" />
        <span asp-validation-for="image" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Instagram URL")
        <input type="text" asp-for="InstagramUrl" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Twitter")
        <input type="text" asp-for="TwitterUrl" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Açıklama")
        <textarea cols="30" rows="5" asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <br />
 
    <button class="btn btn-outline-primary">Oluştur</button>
</form>

