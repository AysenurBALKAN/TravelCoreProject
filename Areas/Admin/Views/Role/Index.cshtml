@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rol Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Rol Adı</th>
        <th>Rol Sil</th>
        <th>Rol Güncelle</th>
    </tr>
    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Admin/Role/GetRole/@item.Id" class="btn btn-outline-warning">Güncelle</a></td>
            </tr>
        }
    }
            else
            {
                <tr>
                    <td class="alert alert-danger">Rol Bulunamadı</td>
                </tr>
            }
</table>

<a href="/Admin/Role/CreateRole/" class="btn btn-outline-primary">Yeni Rol Oluştur</a>