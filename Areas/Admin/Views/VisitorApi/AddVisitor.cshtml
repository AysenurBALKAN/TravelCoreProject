@model VisitorViewModel
@{
    ViewData["Title"] = "AddVisitor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Api İle Ziyaretci ekleme</h1>
<form method="post">
    <label>Ziyaetci Adı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    <label>Ziyaretci Soyadı</label>
    <input type="text" asp-for="SurName" class="form-control" />
    <br />
    <label>Ziyaretci Şehir</label>
    <input type="text" asp-for="City" class="form-control" />
    <br />
    <label>Ziyaretci Ülke</label>
    <input type="text" asp-for="Country" class="form-control" /> 
    <br />
    <label>Ziyaretci Mail</label>
    <input type="text" asp-for="Mail" class="form-control" />
    <button class="btn btn-outline-success">Ziyaretçi Ekle</button>
</form>

